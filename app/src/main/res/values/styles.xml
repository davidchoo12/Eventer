<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:fadeScrollbars">true</item>
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        <!--<item name="windowBackground">@color/activityBg</item>-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--for offed checkbox-->
        <item name="android:textColorSecondary">@color/textSecondary</item>
    </style>

    <style name="toolbar_theme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textViewStyle">@style/toolbar_title</item>
    </style>
    <!--to adjust the actionbar title positioning, shift right by 12dp (default is 60dp to left of screen while guidelines requires 72dp)-->
    <style name="toolbar_title" parent="TextAppearance.AppCompat.Title">
        <item name="android:paddingLeft">12dp</item>
    </style>

    <!--category text style-->
    <style name="text_category" parent="@android:style/TextAppearance.Small">
        <!--<item name="android:layout_width">wrap_content</item>-->
        <!--<item name="android:layout_height">wrap_content</item>-->
        <!--<item name="android:paddingBottom">@dimen/padding_M</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    <!--event card style-->
    <style name="card_event" parent="CardView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>
    <!--event image style-->
    <style name="image_event">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <!-- event title style -->
    <style name="text_event_title" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_L</item>
        <item name="android:paddingLeft">@dimen/padding_M</item>
        <item name="android:paddingRight">@dimen/padding_M</item>
        <item name="android:paddingBottom">@dimen/padding_M</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>
    <!-- event details style -->
    <style name="text_event_desc" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <!--task item title style-->
    <style name="text_task_item_title" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_subhead</item>
    </style>

    <!--task item desc style-->
    <style name="text_task_item_desc" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_S</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--task item date style-->
    <style name="text_task_item_date" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!--notification item image style-->
    <style name="image_notification_item">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <!--notification item description text style-->
    <style name="text_notification_item_desc">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="text_body" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>
</resources>
