<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.eventer.eventer"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Main"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".EventSpecificActivity"
            android:label="@string/title_activity_event_specific">
        </activity>
        <activity
            android:name=".AddEventDetails"
            android:label="@string/title_activity_add_event_details">
        </activity>
        <activity
            android:name=".CreateEventPicture"
            android:label="@string/title_activity_add_event_picture">
        </activity>
        <activity
            android:name=".CreateEventInvMembers"
            android:label="@string/title_activity_add_event_members">
        </activity>
        <activity
            android:name=".NewEventOverview"
            android:label="@string/title_activity_add_event_overview">
        </activity>
        <activity
            android:name=".AddTask"
            android:label="@string/title_activity_add_task">
        </activity>
    </application>

</manifest>
