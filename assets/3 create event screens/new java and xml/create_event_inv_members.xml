<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBg">

    <EditText
        android:id="@+id/add_members"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:hint="@string/addMembersPH"
        android:drawableLeft="@drawable/ic_search_black_24dp"/>

    <Button
        android:background="@drawable/continuebtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/confirmBtnLbl"
        android:layout_above="@+id/add_members_footer"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/add_members_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/addMembersFooter"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>